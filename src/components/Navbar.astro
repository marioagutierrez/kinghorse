<nav
    class="fixed w-full z-50 top-0 bg-navy/90 backdrop-blur-sm shadow-lg border-b border-white/5"
    id="navbar"
>
    <div class="max-w-7xl mx-auto px-6 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-20">
            <!-- Logo -->
            <div class="flex-shrink-0">
                <a href="#hero" class="flex items-center gap-3 no-underline">
                    <img
                        class="h-12 sm:h-16 w-auto"
                        src="/logo-king.png"
                        alt="KingHorse Logo"
                    />
                </a>
            </div>

            <!-- Desktop Menu -->
            <div class="hidden md:block">
                <div class="ml-10 flex items-baseline space-x-8">
                    <a
                        href="#hero"
                        class="text-black hover:text-gold px-4 py-2 rounded-full text-sm font-bold tracking-wide transition-all hover:bg-white/5 no-underline"
                        >INICIO</a
                    >
                    <a
                        href="#about"
                        class="text-black hover:text-gold px-4 py-2 rounded-full text-sm font-bold tracking-wide transition-all hover:bg-white/5 no-underline"
                        >NOSOTROS</a
                    >
                    <a
                        href="#contacto"
                        class="text-black hover:text-gold px-4 py-2 rounded-full text-sm font-bold tracking-wide transition-all hover:bg-white/5 no-underline"
                        >CONTACTO</a
                    >
                </div>
            </div>

            <!-- Mobile Menu Button -->
            <div class="flex md:hidden">
                <button
                    type="button"
                    id="mobile-menu-btn"
                    class="inline-flex items-center justify-center p-2 rounded-md text-gold hover:text-white hover:bg-navy-light focus:outline-none focus:ring-2 focus:ring-inset focus:ring-gold"
                    aria-controls="mobile-menu"
                    aria-expanded="false"
                >
                    <span class="sr-only">Abrir men√∫</span>
                    <!-- Icon when menu is closed -->
                    <svg
                        class="block h-6 w-6"
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                        aria-hidden="true"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                    <!-- Icon when menu is open -->
                    <svg
                        class="hidden h-6 w-6"
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                        aria-hidden="true"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
        </div>
    </div>

    <!-- Mobile Menu -->
    <div
        class="md:hidden hidden bg-navy-dark/95 backdrop-blur-md"
        id="mobile-menu"
    >
        <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 border-t border-gray-800">
            <a
                href="#hero"
                class="text-white hover:text-gold block px-3 py-2 rounded-md text-base font-medium no-underline"
                >Inicio</a
            >
            <a
                href="#about"
                class="text-gray-300 hover:text-gold block px-3 py-2 rounded-md text-base font-medium no-underline"
                >Sobre Nosotros</a
            >
            <a
                href="#contacto"
                class="text-gray-300 hover:text-gold block px-3 py-2 rounded-md text-base font-medium no-underline"
                >Contacto</a
            >
        </div>
    </div>
</nav>

<script>
    // Mobile menu toggle
    const btn = document.getElementById("mobile-menu-btn");
    const menu = document.getElementById("mobile-menu");
    const icons = btn?.querySelectorAll("svg");

    btn?.addEventListener("click", () => {
        menu?.classList.toggle("hidden");
        icons?.forEach((icon) => icon.classList.toggle("hidden"));
    });

    // Close menu when clicking a link
    const mobileLinks = menu?.querySelectorAll("a");
    mobileLinks?.forEach((link) => {
        link.addEventListener("click", () => {
            menu?.classList.add("hidden");
            // Reset icons
            const showIcon = btn?.querySelector("svg:first-child");
            const hideIcon = btn?.querySelector("svg:last-child");
            showIcon?.classList.remove("hidden");
            hideIcon?.classList.add("hidden");
        });
    });
</script>
