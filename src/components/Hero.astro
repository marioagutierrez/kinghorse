---
import ThreeBackground from "./ThreeBackground.astro";
---

<section
    id="hero"
    class="relative min-h-screen flex items-center justify-center overflow-hidden"
>
    <!-- Background Image with Overlay -->
    <div class="absolute inset-0 z-0">
        <img
            src="/images/hero-race.jpg"
            alt="Carrera de caballos emocionante"
            class="w-full h-full object-cover"
        />
        <div
            class="absolute inset-0 bg-gradient-to-b from-navy-dark/95 via-navy/90 to-navy"
        >
        </div>
    </div>

    <!-- Three.js Background -->
    <ThreeBackground />

    <!-- Content -->
    <div
        class="relative z-20 container mx-auto px-4 sm:px-6 lg:px-8 text-center"
    >
        <!-- Logo -->
        <div class="mb-8 animate-float">
            <img
                src="/images/logo-fing-horse-sf.png"
                alt="KingHorse Logo"
                class="w-32 h-32 sm:w-40 sm:h-40 md:w-48 md:h-48 mx-auto drop-shadow-2xl"
            />
        </div>

        <!-- Badge -->
        <div
            class="inline-block px-4 py-1 mb-6 rounded-full bg-gold/20 border border-gold/40 backdrop-blur-sm"
        >
            <span
                class="text-gold font-bold uppercase tracking-wider text-sm sm:text-base"
                >Apuestas de oficina</span
            >
        </div>

        <!-- Headline -->
        <h1
            class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-black mb-6 leading-tight"
        >
            <span class="text-gold block mb-2"> KingHorse </span>
            <span class="text-white drop-shadow-lg">
                La Corona del Hipismo en Venezuela
            </span>
        </h1>

        <!-- Subtitle -->
        <p
            class="text-lg sm:text-xl md:text-2xl text-gray-100 mb-12 max-w-3xl mx-auto leading-relaxed drop-shadow-md"
        >
            Vive la emoción de <span class="text-emerald font-bold"
                >La Rinconada</span
            > y los mejores hipódromos internacionales. Seguridad, pagos rápidos y
            las mejores jugadas en un solo lugar.
        </p>

        <!-- CTAs -->
        <div
            class="flex flex-col sm:flex-row gap-4 sm:gap-6 justify-center items-center"
        >
            <!-- Primary CTA -->
            <a
                href="#contacto"
                class="group relative px-10 py-5 bg-gradient-to-r from-gold-dark via-gold to-gold-light text-navy font-bold text-lg sm:text-xl rounded-full shadow-2xl hover:shadow-gold/50 transform hover:scale-105 transition-all duration-300 overflow-hidden"
            >
                <span class="relative z-10">Juega y Gana</span>
                <div
                    class="absolute inset-0 bg-gradient-to-r from-gold-light to-gold-dark opacity-0 group-hover:opacity-100 transition-opacity duration-300"
                >
                </div>
            </a>

            <!-- Secondary CTA -->
            <a
                href="#programacion"
                class="px-10 py-5 border-2 border-gold text-gold font-semibold text-lg sm:text-xl rounded-full hover:bg-gold hover:text-navy transform hover:scale-105 transition-all duration-300"
            >
                Ver Programación
            </a>
        </div>

        <!-- Trust Indicators -->
        <div
            class="mt-16 flex flex-wrap justify-center gap-8 text-sm text-gray-400"
        >
            <div class="flex items-center gap-2">
                <svg
                    class="w-5 h-5 text-emerald"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                >
                    <path
                        fill-rule="evenodd"
                        d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                        clip-rule="evenodd"></path>
                </svg>
                <span>100% Seguro</span>
            </div>
            <div class="flex items-center gap-2">
                <svg
                    class="w-5 h-5 text-emerald"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                >
                    <path
                        fill-rule="evenodd"
                        d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z"
                        clip-rule="evenodd"></path>
                </svg>
                <span>Pagos Instantáneos</span>
            </div>
            <div class="flex items-center gap-2">
                <svg
                    class="w-5 h-5 text-emerald"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                >
                    <path
                        fill-rule="evenodd"
                        d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z"
                        clip-rule="evenodd"></path>
                </svg>
                <span>Soporte 24/7</span>
            </div>
        </div>
    </div>

    <!-- Scroll Indicator -->
    <div
        class="absolute bottom-8 left-1/2 -translate-x-1/2 z-20 animate-bounce"
    >
        <svg
            class="w-6 h-6 text-gold"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
        >
            <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
    </div>
</section>
